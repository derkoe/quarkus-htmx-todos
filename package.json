{
  "devDependencies": {
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "prettier-plugin-java": "2.6.4",
    "simple-git-hooks": "2.11.1"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
