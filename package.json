{
  "devDependencies": {
    "lint-staged": "13.3.0",
    "prettier": "3.2.4",
    "prettier-plugin-java": "2.5.0",
    "simple-git-hooks": "2.9.0"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
      "prettier --write",
      "git add"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
