{
  "devDependencies": {
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-java": "2.0.0",
    "simple-git-hooks": "2.8.1"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
      "prettier --write",
      "git add"
    ]
