{
  "devDependencies": {
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "prettier-plugin-java": "2.6.0",
    "simple-git-hooks": "2.11.0"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
