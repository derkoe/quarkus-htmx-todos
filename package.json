{
  "devDependencies": {
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "prettier-plugin-java": "2.8.1",
    "simple-git-hooks": "2.13.1"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
