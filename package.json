{
  "devDependencies": {
    "lint-staged": "10.5.4",
    "prettier": "2.3.0",
    "prettier-plugin-java": "1.0.2",
    "simple-git-hooks": "2.4.1"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
      "prettier --write",
      "git add"
    ]
