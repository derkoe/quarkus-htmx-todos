{
  "devDependencies": {
    "lint-staged": "12.1.2",
    "prettier": "2.5.1",
    "prettier-plugin-java": "1.6.0",
    "simple-git-hooks": "2.7.0"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
      "prettier --write",
      "git add"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
