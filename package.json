{
  "devDependencies": {
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "prettier-plugin-java": "1.4.0",
    "simple-git-hooks": "2.6.1"
  },
  "lint-staged": {
    "**/*.{json,yml,yaml,java}": [
      "prettier --write",
      "git add"
    ]
